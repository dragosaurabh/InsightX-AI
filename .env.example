# InsightX AI Environment Variables
# Copy this file to .env and fill in the values

# ====================
# REQUIRED VARIABLES
# ====================

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# ====================
# OPTIONAL VARIABLES
# ====================

# Frontend Origin for CORS (default: http://localhost:3000)
FRONTEND_ORIGIN=http://localhost:3000

# Path to transaction data CSV (default: ./data/transactions.csv)
DATA_PATH=./data/transactions.csv

# Maximum context turns to maintain in session (default: 6)
MAX_CONTEXT_TURNS=6

# Rate limit for LLM calls per minute per session (default: 10)
RATE_LIMIT_PER_MIN=10

# Backend API URL for frontend (default: http://localhost:8000)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Redis URL for session storage (optional, uses in-memory if not set)
# REDIS_URL=redis://localhost:6379/0
